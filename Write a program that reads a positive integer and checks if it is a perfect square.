#include <stdio.h>
#include <stdlib.h>

int main()
{

    signed int x,i,flag,div;

    while(1)
    {
        printf("Enter number to check if it is a perfect square\n");
        scanf("%d",&x);
        flag=0;

        if(x==1)
        {
            flag=1;
        }

        for(i=x-1;i>0; i--)
        {
            div=x/i;
            if(div==i && (x%i==0))
            {
                flag=1;
            }
        }

        if(flag==0)
        {
            printf("%d is not perfect square\n",x);
        }
        else
        {
            printf("%d is perfect square\n",x);
        }
    }

    return 0;
}
