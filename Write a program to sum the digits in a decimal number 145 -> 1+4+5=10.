#include <stdio.h>
#include <stdlib.h>

int main()
{

    signed int x,i,sum;

    while(1)
    {
        sum=0;
        printf("Enter number to sum the digits\n");
        scanf("%d",&x);

        for(i=x; i>0; i=i/10)
        {
            sum=sum+(i%10);
        }

        printf("Result=%d\n",sum);
    }

    return 0;
}
