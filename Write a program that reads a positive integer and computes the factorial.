#include <stdio.h>
#include <stdlib.h>

int main()
{

    signed int x,y,result,i;

    while(1)
    {
        result=1;
     printf("Enter positive integer to get the factorial\n");
     scanf("%d",&x);

     for(i=x;i>0;i--)
     {
         result=result*i;
     }
     printf("Result=%d\n",result);

    }

    return 0;
}
