#include <stdio.h>
#include <stdlib.h>

int main()
{

    signed int x,i,flag,counter;

    while(1)
    {
        printf("Enter positive integer number to check if it is prime or not\n");
        scanf("%d",&x);
        flag=0;
        counter=0;

        if(x<2)
        {
            flag=1;
        }

        for(i=x-1; (i>1) && (flag==0); i--)
        {
            if(x%i==0)
            {
                flag=1;
            }
        }

        if(flag==0)
        {
            printf("%d is prime\n",x);
        }
        else
        {
            printf("%d is not prime\n",x);
        }
    }

    return 0;
}
