#include <stdio.h>
#include <stdlib.h>

int main()
{

    signed int x,y,result,i;

    while(1)
    {

        result=1;
        printf("Enter base\n");
        scanf("%d",&x);
        printf("Enter power\n");
        scanf("%d",&y);

        for(i=y;i>0;i--)
        {
            result=x*result;
        }

        printf("Result=%d\n",result);

    }

    return 0;
}
